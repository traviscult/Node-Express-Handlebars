<h1>Burgers!</h1>


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div>
                    <form>
                        <input type="hidden" value={{this.id}}>
                        <button type="submit" class="btn btn-primary">Devour!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            "eaten burgers"
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <div>
                    <form >
                        <input type="text" placeholder= {{this.burger_name}}>
                    </form>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container ">
    <div class="form-group">
        <form action="">
            <input type="Burger" class="form-control" id="Type your burger here!">
            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>