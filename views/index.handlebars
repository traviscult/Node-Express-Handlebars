<div class="row d-flex justify-content-center align-items-center">

    <div class="col text-center" id="burger">
        <h1>Burgers!</h1>

        <img src="/assets/img/bacon-burger.png" alt="Burger Image" id="burgerImage" style="height: 300px; width:auto" />
    </div>

    <div class="container burgerList">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <h4>"Mmmm Burgers waiting to be eaten!"</h4>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <p>{{burger_name}} <button type="submit" class="devour btn btn-primary"
                            data-id="{{id}}">Devour!</button></p>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h4>"eaten burgers"</h4>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <p>{{burger_name}}</p>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class=" col-md-12">
        <h6>Add a Burger</h6>
        <form class="create-form">
            <div class="form-group">
                <label>Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>