<h1>Burgers!</h1>


<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6">
            "MMM Burgers waiting to be eaten!"
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <p>{{burger_name}} <button type="submit" class="devour btn btn-primary"
                        data-id="{{id}}">Devour!</button></p>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            "eaten burgers"
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <p>{{burger_name}}</p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>


<div class="container ">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>